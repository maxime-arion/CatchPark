<div class="new-parking-container">
  <h1 class="new-parking-title">Nouveau Parking</h1>

  <%= form_with model: @parking, local: true, html: { class: 'new-parking-form' } do |form| %>

    <div class="form-group">
      <%= form.label :address, class: 'form-label' %>
      <%= form.text_field :address, class: 'form-input' %>
    </div>

    <div class="form-group">
      <%= form.label :status, class: 'form-label' %>
      <%= form.check_box :status, class: 'form-checkbox' %>
    </div>

    <div class="form-group">
      <%= form.label :duration, class: 'form-label' %>
      <%= form.number_field :duration, in: 1..1440, step: 1, class: 'form-input' %>
    </div>

    <div class="form-actions">
      <%= form.submit 'CrÃ©er', class: 'submit-button' %>
      <%= link_to 'Retour', parkings_path, class: 'back-link' %>
    </div>

  <% end %>
</div>
